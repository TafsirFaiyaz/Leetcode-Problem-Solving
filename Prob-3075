#3075. Maximize Happiness of Selected Children

class Solution:
    def maximumHappinessSum(self, happiness: List[int], k: int) -> int:

        happiness.sort(reverse=True)
        count=0
        j = 0

        if k>0:
            for i in range(len(happiness)):
                happiness[i] -= j

                if happiness[i] <= 0:
                    return count


                count+=happiness[i]
                j += 1
                k -= 1
                if k <= 0:
                    return count
